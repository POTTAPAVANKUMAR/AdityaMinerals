@using AdityaMinerals.EntityModels
@model List<ADM_M_UOM>
@{
    ViewBag.Title = "UOM";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<script src="~/Scripts/bootstrap.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link src='http://cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css' />
<script src="https://code.jquery.com/jquery-3.5.1.min.js"
        integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
        crossorigin="anonymous"></script>
<script src='https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js'></script>
<style>
    #bodyuom {
        position: relative;
        z-index: 1;
        background: #1d1d1d;
        display: flex;
        
        width: 100%;
        padding: 45px;
        color: white;
        box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.4), 0 5px 5px 0 rgba(0, 0, 0, 0.4);
        border-radius: 10px;
    }


    #uomtable_filter {
        display: flex;
        justify-content: flex-start;

    }
    .dataTables_filter input {
        -webkit-appearance: none;
        border: 1px solid #000000 !important;
        line-height: 1;
        outline: 0;
        color: #000000;
        border-color: #000000 !important;
        padding: 0.45em 1.5em 0.20em 0.20em;
        border-radius: 3px;
        /*background: linear-gradient(#000000, #000000) no-repeat, linear-gradient(-135deg, rgba(255,255,255,0) 50%, white 50%) no-repeat, linear-gradient(-225deg, rgba(255,255,255,0) 50%, white 50%) no-repeat, linear-gradient(#c1b9b9, #c1b9b9) no-repeat;*/
        background-color: white;
        background-size: 1px 100%, 20px 20px, 20px 20px, 20px 60%;
        background-position: right 20px center, right bottom, right bottom, right bottom;
    }

    table thead tr {
        background-color: #3d3d3d;
    }

    table {
        position: center;
        max-width: 100%;
        
    }
    td {
        max-width: 100px;
        overflow: hidden;
        
        white-space: nowrap;
    }
    #uomtable {
        width:1000px;
    }
</style>
<body>
  

    <div id="bodyuom">


       
        <div class="container form-group" style="width:33%;position:center;padding-top:3%" >

            <table id="uomtable" class="table table-responsive table-hover">
                <thead>
                    <tr>
                        <th scope="col">
                            ID
                        </th>
                        <th scope="col">
                            NAME
                        </th>
                        <th scope="col">
                            DESC
                        </th>
                        <th scope="col">
                            QTY
                        </th>
                        <th scope="col">
                            EDIT
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="table-active">
                            <td scope="row">
                                @item.UOM_ID
                            </td>
                            <td scope="row">
                                @item.UOMName_VC
                            </td>
                            <td scope="row">
                                @item.UOMDesc_VC
                            </td>
                            <td scope="row">
                                @item.SINGLEQTY
                            </td>
                            <td scope="row">
                                <a href="#" onclick="edituom()">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
   
</body>
<script>
    uomdatatable();
    function uomdatatable() {
        $('#uomtable').DataTable({
            
            scrollX: true,
            scrollCollapse: true,
            paging: false,
            columnDefs: [
                { width: '20%', targets: 0 }
            ],
            fixedColumns: true,

        });
    }
</script>