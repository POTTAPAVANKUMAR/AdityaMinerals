        <tbody>
            @foreach (var item in Model)
            {
                <tr class="table-active">
                    <td scope="row">
                        @item.ID
                    </td>
                    <td scope="row">
                        @item.InvoiceNo
                    </td>
                    <td scope="row">
                        @item.ProductionDescription_VC
                    </td>
                    <td scope="row">
                        @item.HSNCODE_VC
                    </td>
                    <td scope="row">
                        @item.UOM_VC
                    </td>
                    <td scope="row">
                        @item.QTY
                    </td>
                    <td scope="row">
                        @item.Rate
                    </td>
                    <td scope="row">
                        @item.Amount
                    </td>
                    <td scope="row">
                        @item.Discount
                    </td>
                    <td scope="row">
                        @item.ValueofSupply
                    </td>
                    <td>
                        <a href="#" onclick="delsub(@item.ID)"><i class="fa fa-trash"></i></a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    @foreach (var item in Model)
    {
        <input type="text" id="inv" hidden value="@item.InvoiceNo" />
    }
    </div>
