@model List<ADM_L_BILLINGPART2>
<div class="form-group" style="position:center;padding-top:3%">

    <table id="invoicetable1" class="table table-responsive table-hover">
        <thead>
            <tr>
                <th scope="col">
                    ID
                </th>
                <th scope="col">
                    INVOICE NO
                </th>
                <th scope="col">
                    PRODUCT
                </th>
                <th scope="col">
                    HSN CODE
                </th>
                <th scope="col">
                    UOM
                </th>
                <th scope="col">
                    QTY
                </th>
                <th scope="col">
                    RATE
