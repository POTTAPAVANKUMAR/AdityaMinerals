            <tr>
                <th scope="col">
                    INVOICE NO
                </th>
                <th scope="col">
                    STATE
                </th>
                <th scope="col">
                    STATE CODE
                </th>
                <th scope="col">
                    DATE OF ISSUE
                </th>
                <th scope="col">
                    BP NAME
                </th>
                <th scope="col">
                    BP ADDRESS
                </th>
                <th scope="col">
                    BP GSTIN
                </th>
                <th scope="col">
                    BP STATE
                </th>
                <th scope="col">
                    BP STATE CODE
                </th>
                <th scope="col">
                    SP NAME
